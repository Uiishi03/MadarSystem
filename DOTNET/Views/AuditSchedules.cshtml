@model Madar.ViewModels.AreaOwnerVMs.AuditScheduleListViewModel

@{
    ViewData["Title"] = "Audit Schedules";
    ViewData["PageTitle"] = "Audit Schedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h4 class="mb-1">
                <i class="fas fa-calendar-alt me-2"></i>Audit Schedules
            </h4>
            <p class="text-muted mb-0">Manage audit schedules for @Model.Plant.PlantName</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createScheduleModal">
                <i class="fas fa-plus me-2"></i>New Audit Schedule
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header text-dark">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-filter me-2"></i>Filter Audit Schedules
                    </h6>
                </div>
                <div class="card-body p-3">
                    <form method="GET" asp-controller="AuditSchedule" asp-action="AuditSchedules">
                        <div class="row">
                            <!-- Status Filter -->
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-control" name="status">
                                        <option value="">All Statuses</option>
                                        <option value="Scheduled" selected="@(Model.Filters?.Status == "Scheduled")">Scheduled</option>
                                        <option value="In_Progress" selected="@(Model.Filters?.Status == "In_Progress")">In Progress</option>
                                        <option value="Postponed" selected="@(Model.Filters?.Status == "Postponed")">Postponed</option>
                                        <option value="Completed" selected="@(Model.Filters?.Status == "Completed")">Completed</option>
                                        <option value="Cancelled" selected="@(Model.Filters?.Status == "Cancelled")">Cancelled</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Date Range Filter -->
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">From Date</label>
                                    <input type="date" class="form-control" name="startDate"
                                           value="@Model.Filters?.StartDate?.ToString("yyyy-MM-dd")">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">To Date</label>
                                    <input type="date" class="form-control" name="endDate"
                                           value="@Model.Filters?.EndDate?.ToString("yyyy-MM-dd")">
                                </div>
                            </div>

                            <!-- Auditor Filter -->
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">Auditor</label>
                                    <select class="form-control" name="auditorId">
                                        <option value="">All Auditors</option>
                                        @if (Model.Auditors != null)
                                        {
                                            @foreach (var auditor in Model.Auditors)
                                            {
                                                <option value="@auditor.AudId" selected="@(Model.Filters?.AuditorId == auditor.AudId)">
                                                    @auditor.FullName
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        @if (!string.IsNullOrEmpty(Model.Filters?.Status) || Model.Filters?.StartDate != null || Model.Filters?.EndDate != null || Model.Filters?.AuditorId != null)
                                        {
                                            <a asp-controller="AuditSchedule" asp-action="AuditSchedules" class="btn btn-outline-secondary">
                                                <i class="fas fa-times me-2"></i>Clear Filters
                                            </a>
                                        }
                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search me-2"></i>Apply Filters
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Schedule Statistics -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon mb-2 icon-darkblue"><i class="fas fa-calendar-check"></i></div>
                <div>
                    <h5 class="mb-0">@Model.Schedules.Count(s => s.AudSchStatus == "Scheduled")</h5>
                    <small>Scheduled</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon mb-2 icon-yellow"><i class="fas fa-play-circle"></i></div>
                <div>
                    <h5 class="mb-0">@Model.Schedules.Count(s => s.AudSchStatus == "In_Progress")</h5>
                    <small>In Progress</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon mb-2 icon-green"><i class="fas fa-check-circle"></i></div>
                <div>
                    <h5 class="mb-0">@Model.Schedules.Count(s => s.AudSchStatus == "Completed")</h5>
                    <small>Completed</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon mb-2 icon-red"><i class="fas fa-times-circle"></i></div>
                <div>
                    <h5 class="mb-0">@Model.Schedules.Count(s => s.AudSchStatus == "Cancelled" || s.AudSchStatus == "Postponed")</h5>
                    <small>Cancelled & Postponed</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Schedule Cards -->
    <div class="row">
        @if (Model.Schedules != null && Model.Schedules.Any())
        {
            @foreach (var schedule in Model.Schedules)
            {
                <div class="col-xl-3 col-lg-12 mb-4">
                    <div class="card schedule-card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-calendar-day me-2"></i>
                                @schedule.AudSchDate.ToString("MMM dd, yyyy")
                            </h6>
                            @{
                                var badgeClass = schedule.AudSchStatus == "Scheduled" ? "primary" :
                                schedule.AudSchStatus == "In_Progress" ? "warning" :
                                schedule.AudSchStatus == "Completed" ? "success" : "danger";
                            }
                            <span class="badge bg-@badgeClass">
                                @schedule.AudSchStatus
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="schedule-details mb-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="detail-item mb-2">
                                            <small class="text-muted">Duration:</small>
                                            <div class="fw-semibold">@schedule.AudSchDuration hours</div>
                                        </div>
                                        <div class="detail-item">
                                            <small class="text-muted">Schedule ID:</small>
                                            <div class="fw-semibold">@schedule.AudSchId</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="detail-item mb-2">
                                            <small class="text-muted">Days until audit:</small>
                                            @{
                                                var daysUntil = (schedule.AudSchDate.ToDateTime(TimeOnly.MinValue) - DateTime.Now).Days;
                                                var daysClass = daysUntil < 0 ? "text-success" : "text-primary";
                                                var daysText = daysUntil < 0 ? "Past" : $"In {daysUntil} days";
                                            }
                                            <div class="fw-semibold @daysClass">
                                                @daysText
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Auditor Team -->
                            <div class="auditor-team mb-3">
                                <h6 class="section-title mb-2">
                                    <i class="fas fa-users me-2"></i>Auditor Team: @(schedule.AllocatedAuditors?.Count ?? 0)
                                </h6>
                            </div>

                            <div class="schedule-actions">
                                <div class="btn-group w-100">
                                    <button class="btn btn-outline-primary btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editScheduleModal@(schedule.AudSchId)">
                                        <i class="fas fa-edit me-1"></i>
                                    </button>
                                    <button class="btn btn-outline-info btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editTeamModal@(schedule.AudSchId)">
                                        <i class="fas fa-users me-1"></i>
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteScheduleModal@(schedule.AudSchId)">
                                        <i class="fas fa-trash me-1"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Schedule Modal -->
                <div class="modal fade" id="editScheduleModal@(schedule.AudSchId)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-edit me-2"></i>Edit Audit Schedule
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <form method="POST" asp-controller="AuditSchedule" asp-action="UpdateAuditSchedule" asp-route-scheduleId="@schedule.AudSchId">
                                @Html.AntiForgeryToken()
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Audit Date *</label>
                                        <input type="date" class="form-control" name="AudSchDate"
                                               value="@schedule.AudSchDate.ToString("yyyy-MM-dd")" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Duration (hours) *</label>
                                        <input type="number" class="form-control" name="AudSchDuration"
                                               value="@schedule.AudSchDuration" min="1" max="24" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Status *</label>
                                        <select class="form-control" name="AudSchStatus" required>
                                            <option value="Scheduled" selected="@(schedule.AudSchStatus == "Scheduled")">Scheduled</option>
                                            <option value="In_Progress" selected="@(schedule.AudSchStatus == "In_Progress")">In Progress</option>
                                            <option value="Postponed" selected="@(schedule.AudSchStatus == "Postponed")">Postponed</option>
                                            <option value="Completed" selected="@(schedule.AudSchStatus == "Completed")">Completed</option>
                                            <option value="Cancelled" selected="@(schedule.AudSchStatus == "Cancelled")">Cancelled</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Update Schedule</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Edit Team Modal -->
                <div class="modal fade" id="editTeamModal@(schedule.AudSchId)" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header card-header text-dark">
                                <h5 class="modal-title">
                                    <i class="fas fa-users me-2"></i>Edit Auditor Team
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <form method="POST" asp-controller="AuditSchedule" asp-action="UpdateAuditorAllocation" asp-route-scheduleId="@schedule.AudSchId">
                                @Html.AntiForgeryToken()
                                <div class="modal-body">
                                    <div id="auditorFields@(schedule.AudSchId)">
                                        @if (schedule.AllocatedAuditors != null && schedule.AllocatedAuditors.Any())
                                        {
                                            @for (int i = 0; i < schedule.AllocatedAuditors.Count; i++)
                                            {
                                                var allocation = schedule.AllocatedAuditors[i];
                                                <div class="auditor-row mb-3">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label class="form-label">Auditor</label>
                                                            <select class="form-control" name="auditors[@i].AudId" required>
                                                                <option value="">Select Auditor</option>
                                                                @foreach (var auditor in Model.Auditors)
                                                                {
                                                                    <option value="@auditor.AudId" selected="@(allocation.AudId == auditor.AudId)">
                                                                        @auditor.FullName - @auditor.AudEmail
                                                                    </option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="col-md-5">
                                                            <label class="form-label">Role</label>
                                                            <input type="text" class="form-control" name="auditors[@i].RoleType"
                                                                   value="@allocation.RoleType" placeholder="e.g., Lead Auditor" required>
                                                        </div>
                                                        <div class="col-md-1">
                                                            <label class="form-label">&nbsp;</label>
                                                            <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeAuditorRow(this)">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                    <button type="button" class="btn btn-outline-primary btn-sm"
                                            onclick="addAuditorRow(@schedule.AudSchId)">
                                        <i class="fas fa-plus me-1"></i>Add Another Auditor
                                    </button>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-info">Update Team</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Delete Schedule Modal -->
                <div class="modal fade" id="deleteScheduleModal@(schedule.AudSchId)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-trash me-2"></i>Delete Audit Schedule
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this audit schedule?</p>
                                <div class="alert alert-warning">
                                    <strong>@schedule.AudSchDate.ToString("MMM dd, yyyy")</strong><br>
                                    <small class="text-muted">Duration: @schedule.AudSchDuration hours • Status: @schedule.AudSchStatus</small>
                                </div>
                                <p class="text-danger">This will also remove all auditor assignments for this schedule.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form method="POST" asp-controller="AuditSchedule" asp-action="DeleteAuditSchedule" asp-route-scheduleId="@schedule.AudSchId" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Delete Schedule</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No Audit Schedules Found</h5>
                        <p class="text-muted">Get started by creating your first audit schedule.</p>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createScheduleModal">
                            <i class="fas fa-plus me-2"></i>Create First Schedule
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Create Schedule Modal -->
<div class="modal fade" id="createScheduleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-plus me-2"></i>Create New Audit Schedule
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" asp-controller="AuditSchedule" asp-action="StoreAuditSchedule">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Audit Date *</label>
                                <input type="date" class="form-control" name="AudSchDate"
                                       min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Duration (hours) *</label>
                                <input type="number" class="form-control" name="AudSchDuration"
                                       value="4" min="1" max="24" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status *</label>
                        <select class="form-control" name="AudSchStatus" required>
                            <option value="Scheduled" selected>Scheduled</option>
                            <option value="In_Progress">In Progress</option>
                            <option value="Postponed">Postponed</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>

                    <!-- Auditor Assignment -->
                    <div class="auditor-assignment">
                        <h6 class="section-title mb-3">
                            <i class="fas fa-users me-2"></i>Assign Auditor Team
                        </h6>
                        <div id="auditorFields">
                            <div class="auditor-row mb-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-label">Auditor *</label>
                                        <select class="form-control" name="Auditors[0].AudId" required>
                                            <option value="">Select Auditor</option>
                                            @if (Model.Auditors != null)
                                            {
                                                @foreach (var auditor in Model.Auditors)
                                                {
                                                    <option value="@auditor.AudId">
                                                        @auditor.FullName - @auditor.AudEmail
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-5">
                                        <label class="form-label">Role *</label>
                                        <input type="text" class="form-control" name="Auditors[0].RoleType"
                                               value="Lead Auditor" required>
                                    </div>
                                    <div class="col-md-1">
                                        <label class="form-label">&nbsp;</label>
                                        <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeAuditorRow(this)" disabled>
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="addAuditorRow()">
                            <i class="fas fa-plus me-1"></i>Add Another Auditor
                        </button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Schedule</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .schedule-card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            transition: transform 0.2s ease;
        }

            .schedule-card:hover {
                transform: translateY(-2px);
            }

            .schedule-card .card-header {
                background: white;
                border-bottom: 1px solid #e3e6f0;
            }

        .schedule-details .detail-item {
            padding: 3px 0;
        }

        .team-member {
            border-left: 3px solid #0d6efd;
        }

        .section-title {
            font-size: 0.9rem;
            color: #6c757d;
            font-weight: 600;
        }

        .auditor-row {
            padding: 15px;
            background: #f8f9fa;
            border-radius: 6px;
            border: 1px solid #e9ecef;
        }

        .btn-group .btn {
            border-radius: 0;
        }

            .btn-group .btn:first-child {
                border-top-left-radius: 0.375rem;
                border-bottom-left-radius: 0.375rem;
            }

            .btn-group .btn:last-child {
                border-top-right-radius: 0.375rem;
                border-bottom-right-radius: 0.375rem;
            }
    </style>
}

@section Scripts {
    <script>
        let auditorCount = 1;

        function addAuditorRow(scheduleId = null) {
            const containerId = scheduleId ? `auditorFields${scheduleId}` : 'auditorFields';
            const container = document.getElementById(containerId);

            const newRow = document.createElement('div');
            newRow.className = 'auditor-row mb-3';
            newRow.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Auditor *</label>
                        <select class="form-control" name="auditors[${auditorCount}].AudId" required>
                            <option value="">Select Auditor</option>
                            @if (Model.Auditors != null)
                            {
                                    @foreach (var auditor in Model.Auditors)
                                    {
                                            @Html.Raw($"<option value='{auditor.AudId}'>{auditor.FullName} - {auditor.AudEmail}</option>")
                                    }
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Role *</label>
                        <input type="text" class="form-control" name="auditors[${auditorCount}].RoleType"
                               placeholder="e.g., Team Member" required>
                    </div>
                    <div class="col-md-1">
                        <label class="form-label">&nbsp;</label>
                        <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeAuditorRow(this)">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            `;

            container.appendChild(newRow);
            auditorCount++;
        }

        function removeAuditorRow(button) {
            const row = button.closest('.auditor-row');
            row.remove();
        }
    </script>
}