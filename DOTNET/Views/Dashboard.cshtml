@model Madar.ViewModels.ManagementVMs.DashboardViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Management Dashboard";
    ViewData["PageTitle"] = "Management Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-card">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4 class="mb-2">Welcome back, @User.Identity.Name! 👋</h4>
                        <p class="text-white mb-0">
                            Here's what's happening with your safety management system today.
                            @if (Model.OverdueActions > 0)
                            {
                                <span class="text-warning">
                                    <i class="fas fa-exclamation-triangle ms-2"></i>
                                    @Model.OverdueActions action(s) require your attention.
                                </span>
                            }
                            else
                            {
                                <span class="text-success">
                                    <i class="fas fa-check-circle ms-2"></i>
                                    All systems are running smoothly.
                                </span>
                            }
                        </p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="date-display">
                            <i class="fas fa-calendar-day me-2"></i>
                            @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <h5 class="section-title"><i class="fas fa-chart-bar me-2"></i>System Overview</h5>
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon icon-darkblue"><i class="fas fa-users"></i></div>
                <div class="padding10">
                    <h5 class="mb-0">@Model.TotalUsers</h5>
                    <small>Total Users</small>
                    <div class="trend-indicator up">
                        <i class="fas fa-arrow-up"></i> 12%
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon icon-earth"><i class="fas fa-industry"></i></div>
                <div class="padding10">
                    <h5 class="mb-0">@Model.TotalPlants</h5>
                    <small>Active Plants</small>
                    <div class="trend-indicator up">
                        <i class="fas fa-arrow-up"></i> 5%
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon icon-gray"><i class="fas fa-clipboard-check"></i></div>
                <div class="padding10">
                    <h5 class="mb-0">@Model.CompletionRate%</h5>
                    <small>Audit Completion</small>
                    <div class="trend-indicator @(Model.CompletionRate >= 80 ? "up" : "down")">
                        <i class="fas fa-arrow-@(Model.CompletionRate >= 80 ? "up" : "down")"></i>
                        @(Model.CompletionRate >= 80 ? "8%" : "3%")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon icon-darkblue"><i class="fas fa-tasks"></i></div>
                <div class="padding10">
                    <h5 class="mb-0">@Model.ActionCompletionRate%</h5>
                    <small>Actions Completed</small>
                    <div class="trend-indicator @(Model.ActionCompletionRate >= 75 ? "up" : "down")">
                        <i class="fas fa-arrow-@(Model.ActionCompletionRate >= 75 ? "up" : "down")"></i>
                        @(Model.ActionCompletionRate >= 75 ? "6%" : "2%")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Priority Section -->
    <h5 class="section-title"><i class="fas fa-star me-2"></i>Priority Actions</h5>
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card highlight-card critical">
                <div class="card-header">
                    <h6 class="text-white"><i class="fas fa-exclamation-circle me-2"></i>Critical Issues</h6>
                </div>
                <div class="card-body">
                    <h3>@Model.CriticalIssues</h3>
                    <small>Actions overdue or due within 3 days</small>
                    <div class="progress mt-3">
                        @{
                            var criticalProgress = Model.TotalActions > 0 ? (Model.CriticalIssues / (double)Model.TotalActions) * 100 : 0;
                        }
                        <div class="progress-bar" style="width: @Math.Min(criticalProgress, 100)%; background: var(--earth);"></div>
                    </div>
                    <div class="mt-2">
                        <a asp-action="Index" asp-controller="CorrectiveActions" asp-route-priority="critical"
                           class="btn w-100 btn-sm btn-outline-danger text-white">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card highlight-card due">
                <div class="card-header">
                    <h6 class="text-white"><i class="fas fa-calendar-day me-2"></i>Due This Week</h6>
                </div>
                <div class="card-body">
                    <h3>@Model.ActionsDueThisWeek</h3>
                    <small>Actions due within next 7 days</small>
                    <div class="progress mt-3">
                        @{
                            var dueProgress = Model.TotalActions > 0 ? (Model.ActionsDueThisWeek / (double)Model.TotalActions) * 100 : 0;
                        }
                        <div class="progress-bar" style="width: @Math.Min(dueProgress, 100)%; background: var(--dark-blue);"></div>
                    </div>
                    <div class="mt-2">
                        <a asp-action="Index" asp-controller="CorrectiveActions" asp-route-priority="overdue"
                           class="btn w-100 btn-sm btn-primary">
                            <i class="fas fa-list me-1"></i>Review All
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card highlight-card compliance">
                <div class="card-header">
                    <h6 class="text-white"><i class="fas fa-tachometer-alt me-2"></i>System Health</h6>
                </div>
                <div class="card-body">
                    <h3>@Model.CompletionRate%</h3>
                    <small>Overall system performance</small>
                    <div class="progress mt-3">
                        <div class="progress-bar" style="width: @Model.CompletionRate%; background: var(--dark-blue);"></div>
                    </div>
                    <div class="mt-2">
                        <span class="badge bg-@(Model.CompletionRate >= 80 ? "success" : (Model.CompletionRate >= 60 ? "warning" : "danger"))">
                            @(Model.CompletionRate >= 80 ? "Excellent" : (Model.CompletionRate >= 60 ? "Good" : "Needs Attention"))
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & Quick Actions -->
    <div class="row g-4">
        <div class="col-lg-12">
            <div class="row">
                <!-- Recent Users -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-user-plus me-2"></i>Recently Added Users</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.RecentUsers.Any())
                            {
                                @foreach (var user in Model.RecentUsers)
                                {
                                    <div class="activity-item activity-blue mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar-sm me-3">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <strong>@user.Name</strong>
                                                <div class="text-muted small">
                                                    @user.UserType
                                                    @if (user.CreatedAt.Date == DateTime.Today)
                                                    {
                                                        <span class="badge bg-success ms-2">New</span>
                                                    }
                                                </div>
                                                <div class="text-muted small">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @((DateTime.Now - user.CreatedAt).Days) days ago
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-3">
                                    <i class="fas fa-users fa-2x mb-2"></i>
                                    <p>No new users recently</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Upcoming Audits -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Upcoming Audits</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.UpcomingAudits.Any())
                            {
                                @foreach (var schedule in Model.UpcomingAudits)
                                {
                                    <div class="activity-item activity-earth mb-3">
                                        <div class="d-flex align-items-start">
                                            <div class="schedule-date-sm me-3">
                                                <div class="date-day">@schedule.AudSchDate.Day</div>
                                                <div class="date-month">@schedule.AudSchDate.ToString("MMM")</div>
                                            </div>
                                            <div class="flex-grow-1">
                                                <strong>Plant Name</strong>
                                                <div class="text-muted small">
                                                    @(schedule.AudSchDuration ?? 0) hours
                                                    • Auditors assigned
                                                </div>
                                                <div class="text-muted small">
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    Location
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-3">
                                    <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                    <p>No upcoming audits</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .welcome-card {
            background: linear-gradient(135deg, var(--dark-blue) 0%, #003d5c 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 25px rgba(0, 47, 69, 0.2);
        }

        .date-display {
            background: rgba(255,255,255,0.1);
            padding: 10px 15px;
            border-radius: 10px;
            font-weight: 600;
        }

        .trend-indicator {
            font-size: 0.75rem;
            font-weight: 600;
            margin-top: 5px;
        }

            .trend-indicator.up {
                color: #28a745;
            }

            .trend-indicator.down {
                color: #dc3545;
            }

        .highlight-card .card-header {
            background: rgba(255,255,255,0.1);
            border-bottom: 1px solid rgba(255,255,255,0.2);
            padding: 15px 20px;
        }

            .highlight-card .card-header h6 {
                margin: 0;
                color: inherit;
            }

        .highlight-card.critical {
            background: linear-gradient(135deg, #e38383 0%, #ff685f 100%);
            color: white;
        }

        .highlight-card.due {
            background: linear-gradient(135deg, var(--dark-blue) 0%, #003d5c 100%);
            color: white;
        }

        .highlight-card.compliance {
            background: linear-gradient(135deg, #5ba968 0%, #52965e 100%);
            color: white;
        }

        .schedule-date-sm {
            background: var(--earth);
            color: white;
            border-radius: 8px;
            padding: 8px;
            text-align: center;
            min-width: 45px;
        }

            .schedule-date-sm .date-day {
                font-size: 1rem;
                font-weight: bold;
                line-height: 1;
            }

            .schedule-date-sm .date-month {
                font-size: 0.7rem;
                opacity: 0.9;
            }

        .user-avatar-sm {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: var(--dark-blue);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
        }
    </style>
}