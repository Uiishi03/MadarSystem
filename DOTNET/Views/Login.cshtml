@model Madar.ViewModels.AuthVMs.LoginViewModel
@{
    ViewData["Title"] = "Madar System - Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: "Segoe UI", sans-serif;
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        /* ===== LEFT SIDE (Background Image) ===== */
        .left-panel {
            flex: 1;
            background: url("/bg.jpeg") no-repeat center center;
            background-size: cover;
            position: relative;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 4rem;
        }

        .left-panel::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.45);
        }

        .left-content {
            position: relative;
            z-index: 1;
        }

        .left-content img {
            width: 80px;
            margin-bottom: 15px;
        }

        .left-content h2 {
            font-weight: bold;
            color: #fff;
        }

        .left-content p {
            font-size: 1rem;
            color: #e0e0e0;
        }

        /* ===== RIGHT SIDE (Orange Background + Highlighted Form) ===== */
        .right-panel {
            flex: 1;
            background: #BCD4CC; /* orange background */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 3rem;
        }

        .login-card {
            background: #fff;
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            animation: fadeIn 0.6s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card h4 {
            color: #0c2e4e;
            font-weight: 600;
        }

        .form-control {
            border-radius: 0.5rem;
        }

        .btn-login {
            background-color: #0c2e4e;
            color: #fff;
            border-radius: 0.5rem;
            transition: 0.3s;
        }

        .btn-login:hover {
            background-color: #17476d;
            transform: translateY(-2px);
        }

        /* ===== Responsive ===== */
        @@media (max-width: 992px) {
            .login-container {
                flex-direction: column;
            }

            .left-panel, .right-panel {
                flex: none;
                width: 100%;
                height: auto;
            }

            .right-panel {
                padding: 2rem;
            }
        }
    </style>
</head>

<body>

    <div class="login-container">
        <!-- LEFT SIDE -->
        <div class="left-panel">
            <div class="left-content">
                <div class="d-flex align-items-center mb-4">
                    <img src="~/logo.png" alt="Madar Logo">
                    <div class="ms-3">
                        <h2 class="mb-0">Madar System</h2>
                        <p class="mb-0">Audit Management Platform</p>
                    </div>
                </div>
                <p class="mt-3">
                    Streamline your safety audits, track compliance, and manage corrective actions
                    with our comprehensive inspection management system.
                </p>
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="right-panel">
            <div class="login-card">
                <h3 class="text-center">
                    <img height="40" src="~/logo.png" alt="Madar Logo"> Madar System
                </h3>
                <h4 class="text-center mb-3">Sign In</h4>
                <p class="text-center text-warning mb-4">
                    Welcome back! Please sign in to access your account.
                </p>

                @* Display timeout message *@
                @if (TempData["TimeoutMessage"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @TempData["TimeoutMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @* Display success message *@
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @* Display validation errors *@
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p class="mb-0"><i class="bi bi-exclamation-circle me-2"></i>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <form method="POST" asp-action="Login" asp-controller="Auth">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" asp-for="Email" class="form-control"
                                   placeholder="Enter your email" required autofocus>
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" asp-for="Password" class="form-control"
                                   placeholder="Enter your password" required>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a href="#" class="small text-decoration-none">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-login w-100">Sign In</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>