<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Madar System - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/custom.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        var userType = User.FindFirst("UserType")?.Value;
    }

    @if (User.Identity.IsAuthenticated)
    {
        @if (userType == "Management")
        {
            <partial name="_ManagementSidebar" />
        }
        else if (userType == "Auditor")
        {
            <partial name="_AuditorSidebar" />
        }
        else if (userType == "AreaOwner")
        {
            <partial name="_AreaOwnerSidebar" />
        }
        else if (userType == "ResponsiblePerson")
        {
            <partial name="_ResponsiblePersonSidebar" />
        }
    }

    <div class="main-content" id="main-content">
        @if (User.Identity.IsAuthenticated)
        {
            @if (userType == "Management")
            {
                <partial name="_ManagementNavbar" />
            }
            else if (userType == "Auditor")
            {
                <partial name="_AuditorNavbar" />
            }
            else if (userType == "AreaOwner")
            {
                <partial name="_AreaOwnerNavbar" />
            }
            else if (userType == "ResponsiblePerson")
            {
                <partial name="_ResponsiblePersonNavbar" />
            }
        }

        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script>
        $.fn.dataTable.ext.errMode = 'none';
        $(document).ready(function() {
            $('table').on('error.dt', function (e, settings, techNote, message) {
                console.warn('DataTables warning suppressed:', message);
            }).DataTable();

            $('.select2').select2({
                theme: 'bootstrap-5',
                placeholder: 'Select an option',
                allowClear: true
            });
        });

        function confirmDelete(formId) {
            if (confirm('Are you sure you want to delete this item? This action cannot be undone.')) {
                document.getElementById(formId).submit();
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>