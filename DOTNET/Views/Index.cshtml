@model List<Madar.Models.User>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "User Management";
    ViewData["PageTitle"] = "User Management";
}

<div class="container-fluid">
    <!-- Header with Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="section-title"><i class="fas fa-users me-2"></i>System Users</h5>
            <p class="text-muted mb-0">Manage all user accounts and roles</p>
        </div>
        <a asp-action="Create" asp-controller="Users" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Add New User
        </a>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar-sm me-3">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <strong>@user.Name</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge @(user.UserType switch {
                                        "Management" => "bg-primary",
                                        "Auditor" => "bg-success",
                                        "AreaOwner" => "bg-warning",
                                        "ResponsiblePerson" => "bg-info",
                                        _ => "bg-secondary"
                                    })">
                                        @user.UserType
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success">Active</span>
                                </td>
                                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-controller="Users" asp-route-id="@user.UserId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                onclick="confirmDelete(@user.UserId)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                    <form id="delete-form-@user.UserId"
                                          asp-action="Delete" asp-controller="Users" asp-route-id="@user.UserId"
                                          method="post" style="display: none;">
                                        @Html.AntiForgeryToken()
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId) {
            if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
                document.getElementById('delete-form-' + userId).submit();
            }
        }
    </script>
}